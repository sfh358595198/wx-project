.shelflist{
  display: flex;
  padding: 20rpx 30rpx;
  margin-bottom: 50rpx;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.shelfitem{
  display: flex;
  flex-direction: column;
  width: 31%;
  margin-right: 20rpx;
}
.shelfitem:nth-child(3n){
  margin-right: 0;
}
.shelfitem image{
  width: 100%;
  /* height: 100%; */
}
.shelfitem .bn{
  font-size: 28rpx;
  color: #000;
  margin: 10rpx 0 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
}