.login{
  padding: 40rpx;
  /* background-color: red; */
}
.topbar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}
.topbar .brand{
  width: 290rpx;
  height: 72rpx;
}
.brand image{
  width: 100%;
  height: 100%;
}
.operate{
  display: flex;
  font-size: 24rpx;
  color: #a1a1b3;
}
.operate text{
  margin: 0 15rpx;
}

.field{
  position: relative;
  margin: 20rpx 0;
  width: 100%;
}
.a{
  width: 100%;
  background-color: #eee;
}
.field_input{
  padding: 24rpx 26rpx;
  font-size: 28rpx;
  width: calc(100% - 52rpx);
  border-radius: 10rpx;
}
.field_input+text{
  position: absolute;
  right: 10rpx;
  top: 0;
  bottom: 0;
  margin: 20rpx 0;
  text-align: center;
  background: #23b383;
  font-size: 24rpx;
  color: #fff;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
}
.protocol{
  margin: 100rpx 0 20rpx;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #a1a1b3;
}
.protocol .svh{
  color: #23b383;
}
.lgbt{
  background-color: #23b383;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 0;
}
