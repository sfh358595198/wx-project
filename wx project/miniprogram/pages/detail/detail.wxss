.showwrap{
  display: flex;
  padding: 64rpx 32rpx 48rpx;
}
.fm{
  width: 215rpx;
  height: 286rpx;
  flex-shrink: 0;
  margin-right: 32rpx;
}
.fm image{
  width: 100%;
  height: 100%;
}
.text{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 6rpx 0 26rpx;
}
.text .bookname{
  font-size: 38rpx;
  color: #333;
  font-weight: 700;
  /* margin-top: 10rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
  word-wrap: break-word;
}
.text .author{
  font-size: 28rpx;
  color: #999;
  /* margin-top: 30rpx; */
}
.text .desc{
  font-size: 24rpx;
  color: #999;
  margin-top: 60rpx;
}
.smalltitle,.bookinfo{
  font-size: 36rpx;
  color: #000;
  margin-top: 16rpx;
  padding: 48rpx 24rpx;
}
/* .zx{
  font-size: 34rpx;
  color: red;
} */
.intro{
  font-size: 28rpx;
  color: #999;
  line-height: 44rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
  word-wrap: break-word;
  padding: 0 24rpx;
}
.footcard{
  margin-bottom: 130rpx;
}
.carditem {
  display: flex;
  margin: 8rpx 0;
  padding: 0 30rpx;
}
.carditem .a {
  width: 124rpx;
  flex-shrink: 0;
  font-size: 24rpx;
  color: #999;
}
.carditem .b {
  font-size: 24rpx;
  color: #333;
  margin-left: 4rpx;
  text-align: left;
}
.footbar{
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fefefe;
  font-size: 28rpx;
}
.footbar .operate{
  width: 320rpx;
  height: 100%;
  line-height: 96rpx;
  color: #23b383;
  font-weight: 700;
  text-align: center;
}
.footbar .added{
  color: #ccc;
}
.footbar .start{
  width: 320rpx;
  height: 72rpx;
  line-height: 72rpx;
  color: #fff;
  background-color: #23b383;
  text-align: center;
  border-radius: 8rpx;
}